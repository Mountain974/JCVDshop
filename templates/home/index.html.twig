{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1 class="mt-5 mx-auto">Bienvenue au JCVD Shop</h1>

<div class="row m-5">
        {% for produit in produits %}
                <div class="col-md-4">
                    <div class="card mb-4" style="width: 25rem;">
                        <img class="card-img-top" src="{{ asset('images/' ~ produit.image) }}" alt="illustration {{ produit.nom }}"/>
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <p class="card-text">{{ produit.description }}</p>
                            <p class="card-text">Prix : {{ produit.prix }} â‚¬</p>
                        </div>
                    </div>
                </div>
        {% endfor %}
</div>
{% endblock %}